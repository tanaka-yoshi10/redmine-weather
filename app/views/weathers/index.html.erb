<p id="notice"><%= notice %></p>

<h1>Listing Weathers</h1>

<table>
  <thead>
    <tr>
      <th><%= l('city') %></th>
      <th><%= l('country') %></th>
      <% 7.times do |i| %>
        <th><%= (Date.today + i).strftime('%m/%d') %></th>
      <% end %>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.city %></td>
        <td><%= weather.country %></td>
        <% weather.forecast(7).each do |day| %>
          <%= icontag(day) %>
        <% end %>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

